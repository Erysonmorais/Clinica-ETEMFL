# ===== CONFIGURAÇÃO DO BANCO DE DADOS =====
# Host do MySQL
DB_HOST=localhost

# Usuário do MySQL (recomendado criar um específico para a aplicação)
DB_USER=root

# Senha do MySQL
DB_PASSWORD=sua_senha_aqui

# Nome do banco de dados
DB_NAME=clinica_db

# Porta do MySQL (padrão: 3306)
DB_PORT=3306

# ===== CONFIGURAÇÃO DO SERVIDOR =====
# Ambiente de execução (development | production)
NODE_ENV=development

# Porta em que o servidor será executado
PORT=3000

# ===== SEGURANÇA =====
# Chave secreta para autenticação (gere uma string aleatória forte)
API_SECRET=sua_chave_super_secreta_aqui_mude_em_producao

